<?xml version="1.0"?>

<launch>

<node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster"      args="0 0 0 1.5708 0 0 /base_link1 /laser 1" />  
<node pkg="tf" type="static_transform_publisher" name="odom_to_base_broadcaster"      args="0 0 0 0 0 0 /odom /base_link 1" />  

<node pkg="hector_mapping" type="hector_mapping" name="hector_mapping"    output="screen">

<param name="pub_map_odom_transform" value="true"/>
<!-- Frame Names -->
<param name="map_frame" value="map" />
<!--
<param name="base_frame" value="base_link1" />
-->
<!--
<param name="odom_frame" value="base_link1" />
-->
<param name="base_frame" value="base_stabilized" />
<param name="odom_frame" value="base_stabilized" />
<!-- Tf use -->
<param name="use_tf_scan_transformation" value="true"/>
<param name="use_tf_pose_start_estimate" value="false"/>
<!-- Map size / start point -->
<param name="map_resolution" value="0.035"/>
<param name="map_size" value="2048"/>
<param name="map_start_x" value="0.5"/>
<param name="map_start_y" value="0.5" />
<param name="laser_z_min_value" value="-1.0" />
<param name="laser_z_max_value" value="1.0" />
<param name="map_multi_res_levels" value="2" />

<!-- Map update parameters -->
<param name="update_factor_free" value="0.4"/>
<param name="update_factor_occupied" value="0.7" />    
<param name="map_update_distance_thresh" value="0.3"/>
<param name="map_update_angle_thresh" value="0.6" />
</node>


</launch>


